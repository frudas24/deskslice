# Sample config for local testing.
UI_PASSWORD=test123

# Listen address for HTTP server.
LISTEN_ADDR=0.0.0.0:8787

# Runtime directories.
DATA_DIR=./data
CALIB_PATH=./data/calib.json

# ffmpeg executable (must be in PATH or full path).
FFMPEG_PATH=ffmpeg

# Capture driver (gdigrab or d3d11grab).
CAPTURE_DRIVER=gdigrab

# MJPEG preview settings (default video mode).
MJPEG_ENABLED=true
MJPEG_INTERVAL_MS=120
MJPEG_QUALITY=60

# Scroll overlay settings (long-press to activate; deltas are per tick).
SCROLL_OVERLAY_HOLD_MS=2500
SCROLL_OVERLAY_TICK_MS=50
SCROLL_OVERLAY_MAX_DELTA=240

# Streaming settings.
FPS=30
BITRATE_KBPS=6000

# Default monitor index (1-based).
MONITOR_INDEX=1
